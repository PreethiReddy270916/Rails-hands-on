<div class="row">
   <aside class="col-md-4">
   	<section class="user-info">
   		<h1>
   			<%= gravatar_for @user %>
   			<%= @user.name %>   
   		</h1>
   	</section>
   </aside>
	<div class="col-md-4">
       <%= if @user.tweets.any? %>
       <h3>Tweets (<%= @user.microposts.count %>)</h3>
             <ol class="tweets">
        		<%= render @tweets %>
      		</ol>
      		<%= will_paginate @tweets %>
    <% end %>

	</div>
</div>